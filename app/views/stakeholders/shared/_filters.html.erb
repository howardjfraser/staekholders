<div>
  <%= f.label :panel_open, style: 'display: inline-block; padding-bottom: 8px;' do %>
    <%= f.check_box :panel_open %>
    Filters
  <% end %>
  <% if @search.any_filters? %>
    <span>*</span>
  <% end %>

  <% if @search.panel_open %>
    <div  style="background: lightgray; padding:8px;">
      Party <%= f.select :party, Stakeholder::PARTIES, include_blank: 'All' %><br>
      Faction <%= f.select :faction, Stakeholder::FACTIONS, include_blank: 'All' %><br>

      <%= button_to "Clear", "#", class: 'btn btn-white btn-sm', style: 'margin-top: 8px;', data: { action: 'clear-form#clear'} %>
    </div>
  <% end %>
</div>
